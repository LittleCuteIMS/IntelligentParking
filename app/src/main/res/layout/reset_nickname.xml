<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/reset_nickname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:textSize="30dp"
            android:text="修改昵称"
            />
        </android.support.v7.widget.Toolbar>
    <EditText

        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/reset_nickname_mobile"
        android:hint="请输入您的手机号码"
        android:drawableLeft="@drawable/edit"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/reset_nickname_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/reset_edit_nickname"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/edit"
        android:hint="请输入您的新昵称"
        android:inputType="textPersonName"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/reset_nickname_mobile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/btn_save_nickname"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/add_car_drawable"
        android:drawableLeft="@drawable/checked"
        android:text="确定"
        android:textSize="30dp"
        android:textColor="#faa731"
        android:layout_below="@+id/reset_edit_nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />
</RelativeLayout>