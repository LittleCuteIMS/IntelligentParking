<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.foolishfan.IntelligentParking.ParkNavigation.DetailedActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_below="@+id/map_toolbar"
            android:id="@+id/park_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/park_photo"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2c000000"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/details2"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icons1"/>

            <TextView
                android:id="@+id/parking_name"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="22sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/details3"
            android:layout_below="@+id/details2"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icons7"/>

            <TextView
                android:id="@+id/parking_address"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="地址:"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/details4"
            android:layout_below="@+id/details3"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icons4"/>

            <TextView
                android:id="@+id/parking_phone"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="联系电话:"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/details5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/details4"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icons6" />

            <TextView
                android:id="@+id/parking_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:layout_marginLeft="5dp"
                android:text="停车位: 个"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/free_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:text="空闲车位: 个"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/details6"
            android:layout_below="@+id/details5"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icons2"/>

            <TextView
                android:id="@+id/parking_shoufei"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="收费标准:"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:layout_below="@+id/details6"
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2c000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/details7"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icons3"/>

            <TextView
                android:id="@+id/parking_提示"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="特别提示：请您提前预约，避免高峰期愉快出行。"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/details7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/tothere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立刻预定车位"
                android:textSize="18sp"
                android:textColor="#fff"
                android:background="#f505a61f"
                android:layout_marginTop="30dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

