<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adverse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Finance"
    android:background="#f1f0f0">

    <android.support.v7.widget.Toolbar
        android:id="@+id/finance_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/query"
        android:layout_below="@id/finance_toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/start_query"
            android:layout_below="@+id/recent"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="开始查询"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="#f505a61f"
            android:textSize="12sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_below="@+id/query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:fastScrollEnabled="true"
        android:cacheColorHint="#fff"
        android:divider="#f1f0f0"
        android:dividerHeight="10dp" />


</RelativeLayout>
