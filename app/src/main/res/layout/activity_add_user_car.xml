<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adverse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".User.AddUserCar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/addusercar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:textSize="30dp"
        android:text="添加车辆" />
</android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/addusercar_edit_plate_number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/plate_number"
        android:hint="请输入车牌号"
        android:inputType="text"
        android:layout_marginTop="82dp"
        android:layout_alignTop="@+id/addusercar_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/addusercar_edit_remark"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/addusercar_edit_plate_number"
        android:layout_marginTop="38dp"
        android:drawableLeft="@drawable/edit"
        android:hint="请输入备注名"
        android:inputType="text" />

    <Button
        android:id="@+id/addusercar_btn_add"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:background="@drawable/add_car_drawable"
        android:drawableLeft="@drawable/checked"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="确认新增"
        android:textColor="#faa731"
        android:textSize="22sp"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/addusercar_edit_remark"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/addusercar_btn_cancel"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_below="@+id/addusercar_btn_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textColor="#faa731"
        android:textSize="22sp"
        android:layout_weight="1"
        android:background="@drawable/default_button_bg"
        android:drawableLeft="@drawable/cancel"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="取消新增"/>


</RelativeLayout>